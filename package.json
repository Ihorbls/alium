{
	"name": "alium",
	"version": "1.0.4",
	"description": "Save CLI commands as aliases on a directory basis",
	"main": "src/cli.ts",
	"repository": {
		"type": "git",
		"url": "https://github.com/moritzjacobs/alium.git"
	},
	"bin": {
		"alium-bin": "./dist/cli.js"
	},
	"scripts": {
		"build": "yarn clean && tsc -p tsconfig.json && chmod +x dist/cli.js",
		"clean": "rimraf ./dist",
		"dev": "yarn watch",
		"lint": "eslint ./src --ext .ts,.tsx",
		"lint:fix": "eslint ./src --ext .ts,.tsx --fix",
		"test": "yarn lint",
		"watch": "nodemon -e js,ts --watch src --exec \"yarn run build\""
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm test",
			"pre-push": "npm test"
		}
	},
	"lint-staged": {
		"./src/**/*.{js,jsx}": [
			"lint:fix",
			"git add"
		]
	},
	"devDependencies": {
		"@types/debug": "^4.1.4",
		"@types/node": "^12.0.7",
		"@typescript-eslint/eslint-plugin": "^1.0.0",
		"@typescript-eslint/parser": "^1.11.0",
		"eslint": "^6.1.0",
		"eslint-config-airbnb-typescript": "^4.0.0",
		"eslint-config-prettier": "^6.0.0",
		"eslint-plugin-import": "^2.14.0",
		"eslint-plugin-jsx-a11y": "^6.2.3",
		"eslint-plugin-react": "^7.14.2",
		"husky": "^3.0.1",
		"jest": "^24.8.0",
		"lint-staged": "^9.2.1",
		"nodemon": "^1.19.1",
		"prettier": "^1.18.0",
		"rimraf": "^2.6.3",
		"symlink-dir": "^3.1.0",
		"ts-jest": "^24.0.2",
		"ts-node": "^8.3.0",
		"typescript": "^3.5.1"
	},
	"keywords": [
		"cli",
		"alias"
	],
	"author": "Moritz Jacobs <mail@moritzjacobs.de>",
	"license": "MIT",
	"dependencies": {
		"@types/inquirer": "^6.0.3",
		"await-exec": "^0.1.2",
		"chalk": "^2.4.2",
		"commander": "^2.20.0",
		"debug": "^4.1.1",
		"inquirer": "^6.4.1"
	}
}
